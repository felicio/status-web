{
  "name": "status-communities",
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "version": "0.1.0",
  "repository": "https://github.com/status-im/dappconnect-chat-sdk/",
  "license": "MIT OR Apache-2.0",
  "packageManager": "yarn@3.0.1",
  "scripts": {
    "build": "run-s 'build:*'",
    "build:esm": "tsc --module es2020 --target es2017 --outDir dist/esm",
    "build:cjs": "tsc --outDir dist/cjs",
    "fix": "run-s 'fix:*'",
    "fix:prettier": "prettier \"src/**/*.ts\" \"./*.json\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" \"./*.json\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,guides/*.md,src/**/*.ts}\"",
    "test:unit": "nyc --silent mocha",
    "proto": "run-s 'proto:*'",
    "proto:lint": "buf lint",
    "proto:build": "buf generate"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.7.0",
    "eslint-plugin-import": "^2.24.2",
    "mocha": "^9.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "ts-node": "^10.2.1",
    "ts-proto": "^1.83.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "js-sha3": "^0.8.0",
    "js-waku": "^0.12.0",
    "protobufjs": "^6.11.2"
  }
}
